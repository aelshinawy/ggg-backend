// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Genre {
  id          Int @default(autoincrement()) @id 
  igdb_id     Int @unique
  created_at  DateTime @default(now())
  name        String
  games Game[]
}

model Game {
  created_at DateTime @default(now())
  id          Int @default(autoincrement()) @id
  igdb_id     Int @unique
  release_date  DateTime
  name String
  genres Genre[]
}